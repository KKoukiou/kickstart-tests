---
example1:
  topology:
    topology_name: kstests
    resource_groups:
        - resource_group_name: kstests
          resource_group_type: openstack
          resource_definitions:
            - name: "{{ resource_name }}"
              role: os_server
              flavor: m1.large
              image: Fedora-Cloud-Base-28-1.1
              count: 1
              keypair: "{{ keypair }}"
              fip_pool: 10.8.240.0
              networks:
                - installer-jenkins-priv-network
          credentials:
            filename: clouds.yml
            profile: "{{ cloud_profile }}"
  layout:
    inventory_layout:
      inventory_file: "{{ resource_name }}.inventory"
      vars:
        hostname: __IP__
      hosts:
        kstest:
          count: 0
          host_groups:
            - kstest
        kstest-master:
          count: 1
          host_groups:
            - kstest-master
